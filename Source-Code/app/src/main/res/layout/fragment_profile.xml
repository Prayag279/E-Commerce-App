<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/meduim"
        android:background="@color/colorPrimary"
        tools:context=".ui.profile.ProfileFragment"
        android:orientation="vertical">

         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/meduim"
        android:orientation="vertical">

             <ImageView
                 android:layout_width="200dp"
                 android:layout_height="200dp"
                 android:src="@drawable/man2"
                 android:layout_gravity="center" />
         </LinearLayout>


        <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="@dimen/xmeduim"
                 android:gravity="left"
                 android:orientation="vertical">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/meduim"
                     android:gravity="left"
                     android:background="@null"
                     android:hint="Name"/>

             <EditText
                 android:id="@+id/profile_nm"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/large"
                 android:gravity="left"
                 android:background="@null"
                 android:enabled="false"
                 android:textColor="@color/colorPrimaryDark"
                 android:fontFamily="@font/coda"
                 android:inputType="textPersonName"
                 android:text="Sagar Parmar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/strike_through_line_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xmeduim"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/meduim"
                android:gravity="left"
                android:hint="Mobile Number"/>

            <EditText
                android:id="@+id/profile_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:gravity="left"
                android:background="@null"
                android:enabled="false"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/coda"
                android:inputType="phone"
                android:text="+91 7043212340"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/strike_through_line_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xmeduim"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/meduim"
                android:gravity="left"
                android:hint="Type"/>

            <EditText
                android:id="@+id/profile_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:gravity="left"
                android:enabled="false"
                android:textColor="@color/colorPrimaryDark"
                android:background="@null"
                android:fontFamily="@font/coda"
                android:text="Buyer"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/strike_through_line_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/xmeduim"
            android:gravity="center"
            android:orientation="vertical">
            <Button
                android:id="@+id/make_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:textSize="@dimen/meduim"
                android:layout_margin="@dimen/small"
                android:gravity="center"
                android:text="Edit Details"/>

            <Button
                android:id="@+id/save_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttons"
                android:layout_margin="@dimen/small"
                android:textSize="@dimen/meduim"
                android:gravity="center"
                android:text="Save Changes"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>