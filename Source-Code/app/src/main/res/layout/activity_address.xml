<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddressActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:padding="@dimen/xxsmall"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:padding="@dimen/small"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/select_address_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:paddingTop="@dimen/xsmall"
                android:textSize="20sp"
                android:paddingBottom="@dimen/xsmall"
                android:paddingLeft="@dimen/xsmall"
                android:paddingRight="@dimen/xsmall"
                android:src="@drawable/ic_action_navigation_arrow_back"/>
            <TextView
                android:id="@+id/select_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/coda"
                android:textAllCaps="false"
                android:paddingTop="@dimen/xsmall"
                android:paddingBottom="@dimen/xsmall"
                android:paddingLeft="@dimen/large1"
                android:paddingRight="@dimen/large1"
                android:text="Select Address"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/large"
        android:background="@color/colorPrimary"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_design"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:layout_margin="@dimen/meduim"
                android:paddingTop="@dimen/xsmall"
                android:paddingBottom="@dimen/xsmall"
                android:paddingRight="@dimen/meduim"
                android:paddingLeft="@dimen/meduim"
                android:text="+"/>
            <TextView
                android:id="@+id/add_or_change_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large"
                android:layout_margin="@dimen/meduim"
                android:paddingTop="@dimen/xsmall"
                android:paddingBottom="@dimen/xsmall"
                android:paddingRight="@dimen/meduim"
                android:paddingLeft="@dimen/meduim"
                android:text="Add a new address"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center|left"
        android:padding="@dimen/xsmall"
        android:background="@drawable/strike_through_line"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/large5"
                    android:layout_margin="@dimen/meduim"
                    android:paddingTop="@dimen/xsmall"
                    android:paddingBottom="@dimen/xsmall"
                    android:paddingRight="@dimen/meduim"
                    android:paddingLeft="@dimen/meduim"
                    android:text="Empty..."/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:padding="@dimen/xxsmall"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:padding="@dimen/small"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/deliver_here_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:background="@drawable/buttons"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/coda"
                    android:textAllCaps="false"
                    android:paddingTop="@dimen/xsmall"
                    android:paddingBottom="@dimen/xsmall"
                    android:paddingLeft="@dimen/large5"
                    android:paddingRight="@dimen/large5"
                    android:text="Deliver Here"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>