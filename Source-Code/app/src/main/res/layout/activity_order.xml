<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


              <LinearLayout
                  android:padding="@dimen/xxsmall"
                  android:layout_gravity="center"
                  android:background="@color/colorPrimary"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  tools:ignore="MissingConstraints">
            <LinearLayout
                android:padding="@dimen/small"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/order_summary_back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingTop="@dimen/xsmall"
                    android:textSize="20sp"
                    android:paddingBottom="@dimen/xsmall"
                    android:paddingLeft="@dimen/xsmall"
                    android:paddingRight="@dimen/xsmall"
                    android:src="@drawable/ic_action_navigation_arrow_back"/>
                <TextView
                    android:id="@+id/order_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/coda"
                    android:textAllCaps="false"
                    android:paddingTop="@dimen/xsmall"
                    android:paddingBottom="@dimen/xsmall"
                    android:paddingLeft="@dimen/large1"
                    android:paddingRight="@dimen/large1"
                    android:text="Order Summary"/>
            </LinearLayout>
              </LinearLayout>
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/large"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <!--My product 1 Start-->

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_design"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_or_change_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/large"
                            android:layout_margin="@dimen/meduim"
                            android:paddingTop="@dimen/xsmall"
                            android:paddingBottom="@dimen/xsmall"
                            android:paddingRight="@dimen/meduim"
                            android:paddingLeft="@dimen/meduim"
                            android:text="Add or Change Addess"/>

                    </LinearLayout>
                </LinearLayout>
                    <TextView
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center|left"
                        android:padding="@dimen/xsmall"
                        android:background="@drawable/strike_through_line"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                    <LinearLayout
                        android:id="@+id/myproduct_1"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/products_background"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="@drawable/products_background"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                android:src="@drawable/twelvepromax"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/name_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:padding="@dimen/meduim"
                                    android:text="iPhone 12 Pro Max"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="left"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:gravity="center"
                                        android:padding="@dimen/xsmall"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:text="₹ 1,27,302.00"
                                        android:textColor="@color/currentPrice"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:gravity="center"
                                        android:padding="@dimen/xsmall"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:text="Save ₹2,598 (2%)"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:gravity="left"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:gravity="center"
                                        android:padding="@dimen/xsmall"
                                        android:layout_centerVertical="true"
                                        android:layout_alignParentEnd="true"
                                        android:text="Qty : 50"/>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!--My cart 1 editing part-->

                    </LinearLayout>

                    <EditText
                        android:id="@+id/add_address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/app_heading1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg"
                        android:cursorVisible="true"
                        android:ems="19"
                        android:focusable="auto"
                        android:hint="Type Address"
                        android:lines="4"
                        android:gravity="top |left"
                        android:inputType="textMultiLine"
                        android:keepScreenOn="true"
                        android:maxLength="50"
                        android:maxLines="10"
                        android:minEms="18"
                        android:scrollbars="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="15dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="15dp"

                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHighlight="#00FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.627"
                        tools:ignore="MissingConstraints" />
                    <TextView
                        android:id="@+id/line_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="center|left"
                        android:padding="@dimen/xsmall"
                        android:background="@drawable/strike_through_line"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>
                    <!--My product 1 End-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_design"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_design"
                        android:gravity="left"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/large"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/meduim"
                            android:paddingTop="@dimen/xsmall"
                            android:paddingBottom="@dimen/xsmall"
                            android:paddingRight="@dimen/meduim"
                            android:paddingLeft="@dimen/meduim"
                            android:text="Price Details"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/xmeduim"
                            android:paddingRight="@dimen/xmeduim"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:background="@drawable/strike_through_line_vertical"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                         <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="@dimen/xmeduim"
                            android:paddingRight="@dimen/xmeduim"
                            android:orientation="horizontal">
                             <ListView
                                 android:id="@+id/details"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:scrollbars="vertical"/>



                         </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/xmeduim"
                            android:paddingRight="@dimen/xmeduim"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:background="@drawable/strike_through_line_vertical"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingLeft="@dimen/xmeduim"
                            android:paddingRight="@dimen/xmeduim"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20dp"
                                android:gravity="left"
                                android:paddingTop="@dimen/xsmall"
                                android:paddingBottom="@dimen/xsmall"
                                android:paddingRight="@dimen/meduim"
                                android:paddingLeft="@dimen/meduim"
                                android:text="Total Amount"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:paddingLeft="@dimen/xmeduim"
                                android:paddingRight="@dimen/xmeduim"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/total_cashh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:gravity="right"
                                    android:paddingTop="@dimen/xsmall"
                                    android:paddingBottom="@dimen/xsmall"
                                    android:paddingRight="@dimen/meduim"
                                    android:paddingLeft="@dimen/meduim"
                                    android:hint="Total"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:padding="@dimen/xxsmall"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:padding="@dimen/small"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:fontFamily="@font/coda"
                        android:textAllCaps="false"
                        android:paddingTop="@dimen/xsmall"
                        android:paddingBottom="@dimen/xsmall"
                        android:paddingLeft="@dimen/large1"
                        android:paddingRight="@dimen/large1"
                        android:hint="Total Amount"/>
                </LinearLayout>
                <LinearLayout
                    android:padding="@dimen/small"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/order_continue_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:background="@drawable/buttons"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/coda"
                        android:textAllCaps="false"
                        android:paddingTop="@dimen/xsmall"
                        android:paddingBottom="@dimen/xsmall"
                        android:paddingLeft="@dimen/large4"
                        android:paddingRight="@dimen/large4"
                        android:text="Continue"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>